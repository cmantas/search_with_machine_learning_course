{
  "featureset": {
    "features": [
      {
        "name": "name_match",
        "params": [
          "keywords"
        ],
        "template_language": "mustache",
        "template": {
          "match": {
            "name": "{{keywords}}"
          }
        }
      },

      {
        "name": "name_phrase_match",
        "params": ["keywords"],
        "template_language": "mustache",
        "template": {
          "match_phrase": {
                "name.hyphens": { "query": "{{keywords}}", "slop": 6 }
           }
        }
      }
    ]
  }
}