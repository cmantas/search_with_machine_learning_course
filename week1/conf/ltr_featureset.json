{
  "featureset": {
    "features": [
      {
        "name": "name_match",
        "params": [
          "keywords"
        ],
        "template_language": "mustache",
        "template": {
          "match": {
            "name": "{{keywords}}"
          }
        }
      },

      {
        "name": "name_phrase_match",
        "params": ["keywords"],
        "template_language": "mustache",
        "template": {
          "match_phrase": {
                "name.hyphens": { "query": "{{keywords}}", "slop": 6 }
           }
        }
      },

      {
        "name": "avg_review_rating",
        "template_language": "mustache",
        "template": {
          "function_score": {
            "functions": [
              {
                "field_value_factor": {
                  "field": "customerReviewAverage",
                  "missing": 3
                }
              }
            ]
          }
        }
      },

      {
        "name": "review_count",
        "template_language": "mustache",
        "template": {
          "function_score": {
            "functions": [
              {
                "field_value_factor": {
                  "field": "customerReviewCount",
                  "missing": 0
                }
              }
            ]
          }
        }
      },

      {
        "name": "artist_name_phrase_match",
        "params": [
          "keywords"
        ],
        "template_language": "mustache",
        "template": {
          "match_phrase": {
            "artistName.hyphens": {
              "query": "{{keywords}}",
              "slop": 6
            }
          }
        }
      },
      
      {
        "name": "short_description_phrase_match",
        "params": [
          "keywords"
        ],
        "template_language": "mustache",
        "template": {
          "match_phrase": {
            "shortDescription": {
              "query": "{{keywords}}",
              "slop": 6
            }
          }
        }
      },
      
      {
        "name": "long_description_phrase_match",
        "params": [
          "keywords"
        ],
        "template_language": "mustache",
        "template": {
          "match_phrase": {
            "longDescription": {
              "query": "{{keywords}}",
              "slop": 6
            }
          }
        }
      }
    ]
  }
}